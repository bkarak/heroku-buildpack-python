#!/usr/bin/env bash

LUAJIT_URL="http://bkarak.wizhut.com/luajit-2.0.2.tar.gz"
LUATMP_FILE="tmp-luajit.tar.gz"

# Syntax sugar.
source $BIN_DIR/utils

echo "-----> Installing LuaJIT ..."
cd .heroku
mdkir vendor
curl -s -L -o $LUATMP_FILE $LUAJIT_URL
tar -zxvf $LUATMP_FILE > /dev/null
cd LuaJIT-2.0.2
make
make install
make clean
cd ..
rm -rf LuaJIT-2.0.2
rm $LUATMP_FILE
cd ..